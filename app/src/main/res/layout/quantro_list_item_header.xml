<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@id/quantro_list_item_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dip"
    android:paddingRight="20dip"
    android:orientation="vertical"
    android:gravity="top"
    >
    
    <View
        android:id="@id/quantro_list_item_header_top_spacer"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        />
    
    <com.peaceray.quantro.view.generic.HeavyShadowTextView
	    android:id="@id/quantro_list_item_header_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@drawable/quantro_button_white_text_color"
	    android:textSize="12sp" 
	    android:gravity="center_vertical|right"
	    android:background="@drawable/rect_header_frame_runs_left"
	    custom:typeface="Roboto-BoldCondensed"/>
    
</LinearLayout>

