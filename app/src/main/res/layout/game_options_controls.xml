<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.peaceray.quantro"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="top"
    android:id="@id/game_options_controls">
    
    <!-- Action Strip -->
    <include layout="@layout/game_options_controls_action_strip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@id/game_options_controls_action_strip"/>
    
    <!-- Thumbnail -->
    <ImageView
	    android:id="@id/game_options_controls_thumbnail"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scaleType="fitCenter"
		android:gravity="bottom|center_horizontal"
		android:padding="30dp"
		/>
    
    <!-- Description -->
    <com.peaceray.quantro.view.generic.HeavyShadowTextView
		android:id="@id/game_options_controls_description_full"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="@drawable/quantro_button_white_text_color"
		android:textSize="16sp"
		android:paddingLeft="30dp"
		android:paddingRight="30dp"
		custom:typeface="Roboto-Condensed"
		/>
    
    
    
</LinearLayout>