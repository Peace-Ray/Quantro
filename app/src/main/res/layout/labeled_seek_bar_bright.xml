<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:id="@android:id/widget_frame"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="4dp"
	android:paddingBottom="4dp"
	>
	
	<!-- Two parts - label and value. -->
	<com.peaceray.quantro.view.generic.HeavyShadowTextView
		android:id="@id/labeled_seek_bar_value_parts_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left"
		android:textColor="@drawable/quantro_button_white_text_color"
		android:textSize="16sp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:paddingBottom="1dp"
		custom:typeface="Roboto-BoldCondensed"
		/>
	
	<com.peaceray.quantro.view.generic.HeavyShadowTextView
		android:id="@id/labeled_seek_bar_value_parts_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:textColor="@drawable/quantro_button_white_text_color"
		android:textSize="16sp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:paddingBottom="1dp"
		custom:typeface="Roboto-BoldCondensed"
		/>
		
	<!-- The bar. -->
	<SeekBar
		android:id="@id/labeled_seek_bar_seek_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/labeled_seek_bar_value_parts_label"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		/>
	
</RelativeLayout>