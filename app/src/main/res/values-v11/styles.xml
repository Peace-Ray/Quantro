<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fall_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fall_fade_out</item>
    </style>
    
    <style name="ActivityAnimation">
        <item name="android:windowEnterAnimation">@anim/fall_in</item>
        <item name="android:windowExitAnimation">@anim/fall_out</item>
    </style>
    
    <style name="AutoHolo.CheckBox" parent="@android:style/Widget.Holo.CompoundButton.CheckBox">
        <!-- Any customizations for your app running on post-3.0 devices here -->
        <item name="android:button">@drawable/btn_checkbox_holo</item>
    </style>
    
    <style name="AutoHolo.ProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
        <!-- Any customizations for your app running on pre-3.0 devices here -->
    </style>
    
    <style name="AutoHolo.Spinner" parent="@android:style/Widget.Holo.Spinner">
        <!-- Any customizations for your app running on pre-3.0 devices here -->
    </style>
    
    <style name="AutoHolo.PreferenceTextView">
		<item name="android:padding">7dp</item>
    </style>
</resources>
